.admin-layout
    background-color #F9F7F5
.top-bg
    position absolute
    left 0
    top 60px
    width 100%
    height 20px
    background-color #F9F7F5
    z-index 2
.admin-main
    height 100vh
    overflow hidden
.admin-bottom-bg
    position fixed
    left 0
    bottom 0
    width 100%
    height 100vh
    background #F9F7F5
.admin-left-con,.admin-right-con
    position absolute
    left 0
    top 0
    width 100%
    height 100vh
.admin-left-con
    width 200px
    left 50%
    z-index 2
    overflow hidden
    margin-left -595px
    margin-left calc( ( 100vw - 100% ) / 2 - 595px )
    position fixed
    .admin-left
        width 200px
        margin 80px auto 0
        position relative
        height 100vh
.admin-right-con
    padding-left calc( 100vw - 100%)
    padding-top 80px
    box-sizing border-box
    .admin-content
        width 990px
        margin 0 auto
        left 100px
        min-height 100%
        position relative
        background #FFF
