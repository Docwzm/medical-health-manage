.login-layout-mac
    font-family "PingFang SC","Hiragino Sans GB", Arial, sans-serif
.login-layout
    min-width 1190px
    .layout
        width 1190px
        margin 0 auto
    .login-top
        background linear-gradient(#fcfcfc,#f9f9f9)
        position relative
        z-index 2
        .layout
            height 60px
        .logo
            float left
            background url('../../../static/header/icon-logo.svg') no-repeat 0 center / auto 30px
            padding-left 68px
            font-size 18px
            color #000
            font-weight normal
            line-height 60px
        .code
            float right
            width 110px
            margin-top 18px
            position relative
            cursor pointer
            .icon
                border 1px solid #A5A5A5
                border-radius 4px
                line-height 25px
                padding-left 30px
                width 110px
                box-sizing border-box
                font-size 14px
                color #000
                background #FFF url('../../../static/login/icon.png') no-repeat 10px center
            .hide
                border 1px solid #A5A5A5
                border-top none
                width 108px
                position absolute
                left 0
                top 24px
                background #FFF
                height 110px
                background #FFF url('../../../static/login/codeOn.png') no-repeat center
    .login-banner
        background url('../../../static/login/img-login-background.png') no-repeat center / 100%  auto
        position relative
        z-index 1
        .layout
            padding-top 40px
            height 460px
        .login-form
            float right
            width 320px
            background rgba(255,255,255,.9)
            height 420px
            position relative
        .tabs
            overflow hidden
            padding-bottom 40px
            .item
                float left
                width 160px
                line-height 37px
                text-align center
                cursor pointer
                font-size 12px
                border-top 3px solid #FFF
                background #FFF
                color #000
            .item-active
                color #20A0FF
                border-color #20A0FF
                background transparent
                font-weight bold
        .form
            margin 0 60px
        .forget
            margin-top 20px
            text-align right
            a
                color #20A0FF
                font-size 12px
    .login-mod,.login-mod2
        padding 96px 0
        background #FFF
        .layout
            overflow hidden
    .login-mod2
        background #F8F8F8
    .login-mod,.login-mod2
        .left
            float left
            margin-left 100px
            color #000
            font-size 20px
            width 600px
            .title
                font-size 36px
                color #20A0FF
                font-weight normal
            .tips
                margin 10px 0
            .item
                padding-left 50px
                line-height 50px
                background url('../../../static/login/icon-login-tick-blue.svg') no-repeat 0 center
        .right
            float right
            width 320px
            height 320px
            background-repeat no-repeat
            background-position center
    .login-mod2
        .right
            float left
            margin-left 0
        .left
            float right
            margin 0 100px 0 0
            .title
                color #13CE66
            .item
                background-image url('../../../static/login/icon-login-tick-green.svg')
    .login-mod-img1
        background-image url('../../../static/login/img-login-pharmacy-member.svg')
    .login-mod-img2
        background-image url('../../../static/login/img-login-health-facility.svg')
    .login-mod-img3
        background-image url('../../../static/login/img-login-brand-custom.svg')
    .login-mod3
        padding 40px 0 60px
        background #F8F8F8
        .title
            font-size 22px
            color #000
            text-align center
            margin-bottom 40px
            font-weight normal
        .icons
            height 35px
            position relative
            .line
                border-top 2px solid #20A0FF
                height 0
                position absolute
                left 0
                top 50%
                margin-top -1px
                width 100%
            .item
                box-sizing border-box
                width 35px
                height 35px
                line-height 35px
                border 2px solid #20A0FF
                border-radius 50%
                position absolute
                top 0
                font-size 18px
                color #20A0FF
                text-align center
                background-color #F8F8F8
            .item1
                left 0
            .item2
                left 384px
            .item3
                left 770px
            .item4
                right 0
                background #F8F8F8 url('../../../static/login/icon-login-tick-steps.svg') no-repeat center
        .tips
            margin-top 10px
            overflow hidden
            .item
                float left
                width 260px
                margin-right 125px
                .name
                    font-size 20px
                    color #20A0FF
                    margin-bottom 10px
                .detail
                    color #666
                    font-size 14px
    .login-footer
        background #FFF
        .layout
            overflow hidden
            padding 30px 0
            .left,.right
                width 50%
                font-size 14px
                color #999
            .left
                float left
                .item
                    margin-bottom 10px
                    .icon,.link,.space
                        display inline-block
                        vertical-align bottom
                    .link,.space
                        margin-right 10px
                    a
                        color #999
                .item1
                    margin-bottom 10px
                    .icon
                        width 102px
                        height 32px
                        background url('../../../static/login/footer-icon.png') no-repeat center
                        margin-right 35px
                        position relative
                        top -2px
            .right
                float right
                h3
                    font-size 22px
                    font-weight normal
                    padding-bottom 2px
                .item
                    margin-top 10px
                    a,span
                        display inline-block
                        margin-right 10px
                        color #999
                        margin-bottom 10px

