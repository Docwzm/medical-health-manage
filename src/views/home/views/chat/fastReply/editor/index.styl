.editor-reply
    padding 0 20px 0
    .tool
        height 36px
        padding 22px 0
        .back
            float left
            font-size 14px
            color #20a0ff
            cursor pointer
            margin-top 10px
            b
                font-family "宋体"
        .right
            float right
            .el-button
                width 100px
                height 36px
            .el-button+.el-button
                margin-left 30px
    .tips
        font-size 14px
        color #A5A5A5
        float left
    .page-con
        padding-top 20px
        overflow hidden
        .right
            float right
    .row-tips-con
        position fixed
        left 0
        top 0
        min-width 150px
        padding 10px
        line-height 20px
        background #FFF
        border 1px solid #d1dbe5
        box-shadow 0 2px 4px 0 rgba(0,0,0,.12), 0 0 6px 0 rgba(0,0,0,.04)
        z-index 10
        font-size 12px
        border-radius 5px
        font-weight normal
        transform translateX(-50%)
        white-space nowrap
        z-index 9999
        .arrow
            position absolute
            left 50%
            width 0
            height 0
            bottom -7px
            border-color transparent
            border-style solid
            border-width 6px
            border-top-color #d1dbe5
            border-bottom-width 0
            margin-right 3px
        .arrow2
            border-top-color #FFF
            bottom -5px