.fast-reply-dialog
    .el-dialog
        width 500px
        border-radius 5px
        .el-dialog__body
            padding 0
            .title
                font-size 18px
                color #000
                padding-bottom 20px
                border-bottom 1px solid #E7E7E7
                margin 0 20px 30px
                font-weight normal
                span
                    padding-left 20px
            .content
                padding 0 10px 30px
                margin 0 20px
                border-bottom 1px solid #E7E7E7
                position relative
                .tips
                    position absolute
                    right 20px
                    bottom 40px
                    color #A5A5A5
                    font-size 12px
        .dialog-footer2
            margin 0 20px
            padding 20px
            text-align center
            .el-button
                width 88px
            .el-button+.el-button
                margin-left 30px