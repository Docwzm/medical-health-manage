.weight-infos
    margin 0 20px
    .first
        margin 0 20px
        overflow hidden
        position relative
        top -10px
        .left
            float left
            padding-left 68px
            background url('../../../../../../../../static/chart/weight/icon-health-data-weight.svg') no-repeat 0 center
            b
                color #000
                font-size 18px
                span
                    padding-left 10px
                    font-size 14px
                    font-weight normal
            p
                margin-top 10px
                color #A5A5A5
                font-size 14px
        .right
            float right
            overflow hidden
            .info
                float right
                margin-right 40px
                font-size 14px
                color #000
                .s1
                    b
                        padding-right 10px
                        font-size 18px
                    margin-bottom 10px
            .progress
                float right
                width 480px
                position relative
                .item
                    float left
                    width 120px
                    font-size 14px
                    color #000
                    line-height 20px
                    .s1
                        text-align right
                        position relative
                        left 10px
                    .line
                        height 8px
                    .label
                        text-align center
                .item1
                    .line
                        background #00C5FF
                        border-radius 4px 0 0 4px
                .item2
                    .line
                        background #6DE016
                .item3
                    .line
                        background #FFA715
                .item4
                    .line
                        background #FF7517
                        border-radius 0 4px 4px 0
                .pointer
                    position absolute
                    left 0
                    top 18px
                    width 8px
                    background #FFF
                    .box
                        width 4px
                        margin 0 auto
                        height 12px
                        border-radius 2px
                        background #00C5FF
    .weight-tab
        width 100%
        border-collapse collapse
        margin-top 25px
        td
            text-align center
            border 1px solid #E7E7E7
            height 80px
            color #A5A5A5
            font-size 18px
            .val
                padding-left 25px
                color #000
    .weight-tab2
        position relative
        top -1px
        margin 0 0 30px
        td
            font-size 14px
            .con
                margin-left 20px
                position relative
                text-align left
                .label
                    display inline-block
                    width 100px
                .label2
                    width 100px
                .val
                    padding-left 0
                    display inline-block
                    width 105px
                    color #000
                .val2
                    width 105px
                .btn
                    display inline-block
                    width 48px
                    text-align center
                    border 1px solid #000
                    line-height 20px
                    box-sizing border-box
                    border-radius 4px
                .btn1
                    color #00C5FF
                    border-color #00C5FF
                .btn2
                    color #20A0FF
                    border-color #20A0FF
                .btn3
                    color #6DE016
                    border-color #6DE016
                .btn4
                    color #FFA715
                    border-color #FFA715
                .btn5
                    color #FF7517
                    border-color #FF7517
                .btn-none
                    display none
.weight-list
    margin 0 20px
    position relative
    .page-space
        height 20px
    .page-con
        text-align right
        padding-bottom 20px
    .search
        padding 20px 0
        text-align right
    .date-input,.search-select
        width 240px
        margin-right 30px
    .search-btn
        display inline-block
        width 36px
        line-height 36px
        height 36px
        text-align center
        background-color #40AAFF
        background-position center
        background-repeat no-repeat
        border-radius 5px
        cursor pointer
        vertical-align top
        background #40AAFF url("../../../../../../../../static/customer/icon-search.svg") no-repeat center
    .add-btn
        width 102px
        margin-left 30px