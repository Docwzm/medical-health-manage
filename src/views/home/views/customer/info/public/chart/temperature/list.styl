.temperature-list
    margin 0 20px
    position relative
    .page-space
        height 20px
    .page-con
        text-align right
        padding-bottom 20px
    .search
        padding 20px 0
        text-align right
    .date-input,.search-select
        width 240px
        margin-right 30px
    .search-btn
        display inline-block
        width 36px
        line-height 36px
        height 36px
        text-align center
        background-color #40AAFF
        background-position center
        background-repeat no-repeat
        border-radius 5px
        cursor pointer
        vertical-align top
        background #40AAFF url("../../../../../../../../static/customer/icon-search.svg") no-repeat center
    .add-btn
        width 102px
        margin-left 30px