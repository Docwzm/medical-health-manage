.delete-temperature-dialog
    border-radius 5px
    position relative
    .el-message-box__header
        padding 40px 0 0 80px
    .el-message-box__content
        position static
    .el-message-box__status
        font-size 24px !important
        top 40px
        left 45px
        transform inherit
    .el-message-box__message p
        font-size 14px
        font-weight normal
    .el-message-box__close
        display none
    .el-message-box__btns
        padding 0 40px 30px 0
        .el-button
            width 65px
    .el-message-box__btns button:nth-child(2)
        margin-left 30px
    .el-message-box__message
        margin-left 60px !important
    .el-message-box__content
        padding-right 40px
.add-temperature-dialog
    .el-dialog--small
        width 626px
        .el-dialog__title
            font-size 18px
            color #000
        .el-dialog__close
            font-size 14px
            color #A5A5A5
        .el-dialog__body
            border-top 1px solid #E7E7E7
            margin 15px 20px 0
            padding 0 20px
        .el-form-item
            margin-top 30px
            color #000
            .el-form-item__label
                padding-right 0
                text-align left
                color #000
            .el-from-input,.el-form-time
                width 180px
            .el-from-input2
                width 466px
        .el-form-item.is-required
            .el-form-item__label:before
                display none
        .dialog-footer2
            margin 30px 20px 0
            padding 20px
            border-top 1px solid #E7E7E7
            text-align center
            .el-button
                width 88px
            .el-button+.el-button
                margin-left 30px
        .tips
            position absolute
            right 300px
            bottom 0