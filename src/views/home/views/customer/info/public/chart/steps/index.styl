.chart_steps_statis
  position relative
  .steps_chart_layer
    width 950px
  .steps_statis_layer
    margin-left 20px
    padding-top 30px
    .steps_statis_item
      width 303px
      display inline-block
      div
        display inline-block
        vertical-align middle
        img
          width 50px
          height 50px
          margin-left 80px
      >div:last-child
        margin-left 20px
        >span
          display block
          font-size 14px
          color #000000
        >span:last-child
          margin-top 8px
          >span:first-child
            font-size 18px
            margin-right 6px

