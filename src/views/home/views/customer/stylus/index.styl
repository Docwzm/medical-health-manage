.admin-user-box, .admin-group-box
    .admin-title
        .tool
            position absolute
            right 0
            top 8px
    .search
        padding 20px 0
        .age-label
            position absolute
            left 294px
            line-height 36px
            font-size 14px
            color #B4B1AB
            z-index 2
    .serach_input,.search_select
        width 120px
        margin-right 30px
    .search_select2
        width 100px
    .serach_input2
        width 60px
    .serach_input3
        margin-right 0
    .label
        display inline-block
        width 25px
        text-align center
        color #BEBBB7
    .search-more-btn
        display inline-block
        padding-left 10px
        width 94px
        line-height 36px
        font-size 13px
        color #FFF
        background #40AAFF
        border-radius 5px
        cursor pointer
        margin-right 30px
        position relative
        vertical-align top
        &:before
            font-family element-icons!important
            transform translateY(-50%) rotateZ(180deg)
            position absolute
            right 12px
            top 18px
            content "\E607"
            color #FFF
    .search-more-btn-toggle
        &:before
            top 0
            transform translateY(0) rotateZ(0)
    .search-btn
        display inline-block
        width 36px
        line-height 36px
        text-align center
        background #40AAFF url("../../../../../../static/customer/icon-search.svg") no-repeat center
        border-radius 5px
        cursor pointer
        vertical-align top
    .search-hidden
        transition all .3s linear
        height 0
    .search-hidden-show
        height 55px