  .device_dialog
    padding-top 15px
    position absolute
    left -300px
    top 110px
    width 500px
    min-height 100px
    background #FFF
    border 1px solid #C0CCDA
    box-shadow 0 2px 4px 0 rgba(0, 0, 0, .12), 0 0 6px 0 rgba(0, 0, 0, .04)
    border-radius 8px
    font-size 14px
    transform scale(0)
    transform-origin top
    transition transform .2s linear
    .line
      margin 20px 20px 0
      border-bottom 1px solid #E0DEDC
    .arrow
      position absolute
      left 242px
      width 0
      height 0
      bottom -7px
      margin-right 3px
      border 6px solid transparent
      border-bottom 0
      border-top-color #C0CCDA
      margin-right 3px
      &:after
        top -8px
        margin-left -6px
        content ""
        border 6px solid transparent
        border-bottom none
        border-top-color #FFF
        position absolute
        width 0
        height 0
    .close
      position absolute
      right 30px
      top 20px
      width 15px
      height 15px
      background url('../../../../../../static/doctor/icon-close.svg') no-repeat 0 0 / 100%
    .detail-title
      margin 0 40px
      text-align left
      padding-left 0
      font-size 18px
      font-weight normal
    .detail
      overflow hidden
      margin 0 0 0 40px
      min-height auto
    .detail_l
      float left
      width 80px
      padding-top 30px
      .head
        border-radius 100%
        display block
        margin-bottom 10px
      .code
        width 80px
        height 80px
    .detail_r
      float left
      padding 30px 0 0
      margin-left 40px
      width 305px
      .info_item
        list-style none
        line-height 50px
        text-align left
        width 305px
        white-space nowrap
        overflow hidden
        text-overflow ellipsis
        .radio
          padding-right 20px
  .device-dialog-show
    transform scale(1)