.welcome
    padding 40px 20px 0
    background-color #FFF
    height auto
    width 950px
    overflow-x hidden
    .mod1
        overflow hidden
        .info
            float left
            padding 30px 0 0 40px
            width 435px
            height 100px
            .img-con
                width 80px
                height 80px
                float left
                background url("../../../../../static/admin/icon_home_defaultavatar.svg") no-repeat center
                background-size 100%
            .img-con2
                background none
            .img
                border-radius 50%
            .detail
                float left
                margin-left 40px
                .s1
                    font-size 18px
                    color #000
                    margin-bottom 15px
                    font-weight normal
                .s2
                    font-size 14px
                    color #999
                    line-height 22px
    .mod
        margin-top 40px
        .title
            font-size 18px
            padding-left 10px
    .mod2
        .list
            width 960px
            padding-top 40px
            margin 0 auto
            overflow hidden
            position relative
            left -5px
            .item
                float left
                width 290px
                border 1px solid #C5E5FC
                padding 25px 0 0 30px
                height 100px
                margin 0 15px
                cursor pointer
                overflow hidden
                background #FFF
                box-sizing border-box
                .icon
                    float left
                    width 40px
                    height 40px
                    margin-top 5px
                .detail
                    float left
                    margin-left 30px
                    font-size 14px
                    color #000
                    line-height 20px
                    font-weight bold
                    p
                        margin-bottom 11px
                        span
                            display inline-block
                            width 90px
            .item1
                .icon
                    background url("../../../../../static/admin/icon_home doctor.svg")
            .item2
                .icon
                    background url("../../../../../static/admin/icon_home_patient.svg")
            .item3
                .icon
                    background url("../../../../../static/admin/icon_home_money.svg")
            .item:hover
                border-color #20A0FF
                box-shadow 0 2px 4px rgba(32,160,255,.2), 0 0 6px rgba(32,160,255,.1)
    .mod3
        margin-top 30px
        .item
            line-height 60px
            margin 0 20px
            padding-left 45px
            background url("../../../../../static/admin/icon_home_new.svg") no-repeat 0 center
            font-size 14px
            border-bottom 1px solid #EBE9E9
            overflow hidden
            .time
                float right
                color #999