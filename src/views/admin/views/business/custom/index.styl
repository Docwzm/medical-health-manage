.custom_layout
    position relative
.custom_layout_bg
    background-color #FFF
    height 100%
    position relative
    top 0
    .blank
        height 0
    .title
        font-size 18px
        padding 30px 0 10px 10px
        margin 0 20px
        border-bottom 1px solid #E7E7E7
        line-height 20px
        font-weight normal
    //.brank_con2
    //    left -55px
    .brank_con
        //width 830px
        margin 40px auto 0
        position relative
        .edit_url
            //position absolute
            //right -110px
            margin 5px 0
            width 200px
            height 36px
            line-height @height
            //bottom 108px
            padding 0
            font-size 13.333px
            color #666
            &:hover
                color #20a0ff
        .change_img
            //position absolute
            //right -110px
            //top 0
            //width 84px
            //height 32px
            position relative
            margin 5px 0
            width 198px
            height 34px
            line-height @height
            border 1px solid #bfcbd9
            border-radius 4px
            font-size 13.333px
            text-align center
            color #666
            cursor pointer
            &:hover
                border-color #20a0ff
                color #20a0ff
            input
                position absolute
                left 0
                top 0
                width 100%
                height 100%
                opacity 0
                cursor pointer
                font-size 0
    .brank_item
        overflow hidden
        margin-bottom 30px
        text-align center
        .label
            //float left
            width 60px
            text-align right
            font-size 14px
            color #000
            line-height 38px

            display inline-block
            vertical-align top
            margin-right 10px
        .detail
            //float right
            //width 750px
            width 520px
            text-align left
            display inline-block
            position relative
            .upload_img
                width 520px
                height 138px
            .img_box
                //width 748px
                //height 198px
                width 520px
                height 138px
                border 1px dashed #E7E7E7
                border-radius 10px
                background url('../../../../../../static/custom/icon-add img.svg') no-repeat center
                margin-bottom 5px
                cursor pointer
                position relative
                .upload_file
                    position absolute
                    left 0
                    top 0
                    width 100%
                    height 100%
                    opacity 0
            .tips
                color #999
                line-height 30px
                font-size 14px
            .tips2
                color #FF4949
            .url_input
                margin-bottom 5px
            .url_input_error
                input
                    border-color #FF4949
                    &:hover
                        border-color #FF4949
        .detail2
            text-align center
        .is-disabled .el-input__inner
            background-color #F9FAFC
            color #999
    .brank_item2
        padding-top 5px
.upload_window
    .el-button--default,.el-message-box__close
        display none
    .el-button--primary
        display inline-block
