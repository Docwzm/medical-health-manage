//圆角
$_borderRadius(n)
  -webkit-border-radius n
  -moz-border-radius n
  border-radius n

//边线颜色
$borderColor = #ebe9e9
//边线
$border = 1px solid $borderColor
//边线 虚线
$borderDashed = 1px dashed $borderColor
//字体大小
$fontSize = 14px
//灰色字体颜色
$fontColorGray = #999999

//主体样式
.wchat_content_box
    position relative
    margin-top 30px
    font-size $fontSize
    vertical-align top
    >div
      vertical-align top
    //左侧展示样式
    >.left
      width 222px
      display inline-block
      //margin-left 20px
      >div
        border $border;
      >.wchat_sketch
      >.wchat_details
        //标题样式
        >.title
          font-weight normal
          border-bottom $border
          font-size $fontSize
          padding 10px
      //推送封面
      >.wchat_sketch
        >.content
          >span
            display block
            padding-left 10px
            font-size $fontSize - 2px
            color $fontColorGray
          >.content_title
            word-wrap break-word
            padding-top 10px
            color #000000
          >.content_desc
            word-wrap break-word
            padding-bottom 20px
          >.content_pic
            padding 10px
            width 200px
            height 112px
            >img
              width 100%
              height 100%
      //详情内容
      >.wchat_details
          margin-top 20px
          >.content
            padding 30px 10px
            color $fontColorGray
            overflow-x auto
            max-height 300px
    //右侧填充选项样式
    >.right
      display inline-block
      width calc( 100% \- 320px )
      margin-left 70px
      .wchat_item
        margin-bottom 30px
        >label
          display inline-block
          width 60px
          text-align: right
          &.wchat_upload_label
            vertical-align top
        >div
          display inline-block
          position relative
          margin-left 10px
          width calc( 100% \- 90px )
          span.wchat_item_error
            color #ff4949
            position absolute
            top 100%
            left 0
            padding-top 4px
            line-height 1
            font-size 12px
          span.valid_length
              background-color #FFFFFF
              float right
              position relative
              margin-top -28px
              padding-left 5px
              padding-right 12px
              margin-right 1px
              color #999999
              &.error
                color #E06C60
              &.disabled
                background-color #eef1f6
                color #bbb
          &.wchat_upload_item_layer
            >img
              width 520px
              height 290px
            >.wchat_upload_select_layer
              width 520px
              height 290px
              border $borderDashed
              $_borderRadius(5px)
              background url('../../../../../../static/custom/icon-add img.svg') no-repeat center
              >.upload_file
                left 0
                top 0
                width 100%
                height 100%
                opacity 0
            .wchat_upload_item_change_img_btn
              position relative
              margin-top 5px
              width 198px
              height 34px
              line-height 36px
              border 1px solid #bfcbd9
              border-radius 4px
              font-size 13.333px
              text-align center
              color #666
              cursor pointer
              &:hover
                border-color #20a0ff
                color #20a0ff
              input
                position absolute
                left 0
                top 0
                width 100%
                height 100%
                opacity 0
                cursor pointer
                font-size 0
            >span
              color $fontColorGray
              margin-top 10px
              display block
        &.wchat_item_btns
          text-align right
          padding-right 15px

    >.noleft
      margin-left 195px

.fade-enter-active,
.fade-leave-active
  transition: all .5s
.fade-enter,
.fade-leave-active
  opacity 0

