.admin-editor-doctor
    .loading-box
        width 500px
        margin 0 auto
        position relative
    .con
        width 448px
        margin 30px auto 0
        overflow hidden
        border-bottom 1px solid #EBE9E9
    .head-tool
        float left
        width 100px
        text-align center
        position relative
        .img
            img
                display block
                border-radius 50%
            width 100px
            height 100px
            background url("../../../../../../static/admin/icon_newdoctor_defaultavatar.svg") no-repeat center
        .img-has
            background none
        .upload
            width 88px
            margin 30px auto 10px
            position relative
            .upload-btn
                width 88px
            .upload-file
                position absolute
                left 0
                top 0
                width 100%
                height 100%
                opacity 0
                cursor pointer
                font-size 0
        .tips
            font-size 14px
            color #ACA8A2
            line-height 20px
            width 200px
            margin-left -50px
    .form-list
        float right
        width 320px
        .item
            padding-bottom 30px
            overflow hidden
            .label
                float left
                width 70px
                margin-right 10px
                text-align right
                font-size 14px
                line-height 36px
                color #000
            .detail
                float left
                width 240px
            .form_input,.form_select
                width 240px
            .reset-password-btn
                width 120px
    .form-btns
        width 448px
        margin 30px auto 0
        text-align right
        .btn
            width 90px
            margin-left 30px
        .btn2
            border-color #eef1f6
        .tips
            margin-top 10px
            text-align right
            font-size 14px
            color #999
            line-height 20px