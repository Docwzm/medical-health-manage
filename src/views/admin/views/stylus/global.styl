.admin-content-box
    padding 0 20px
    width 950px
.admin-title
    height 50px
    border-bottom 1px solid #EBE9E9
    position relative
    h2
        padding-left 10px
        font-size 18px
        font-weight normal
        line-height 50px
    .tool
        position absolute
        right 0
        top 10px
.admin-list-select-con
    position relative
.admin-table-select-all
    position absolute
    left 5px
    top 5px
    width 40px
    height 40px
    cursor pointer
    z-index 2
.admin-top-tab
    width 990px
    overflow hidden
    .item
        float left
        cursor pointer
        width 50%
        box-sizing border-box
        border-width 1px
        border-style solid
        border-color #EBE9E9
        background-color #F9F8F8
        line-height 48px
        text-align center
        font-size 18px
        color #000
    .item:first-of-type
        border-left none
    .item_active
        background-color #FFF
        color #20A0FF
        border-width 3px 0 0 0
        border-top-color #40AAFF
        line-height 47px
.admin-content
    .page-space
        height 20px
    .page-con
        position static !important
        padding-bottom 20px
        text-align right
    .row-tips-con
        position fixed
        left 0
        top 0
        min-width 150px
        padding 10px
        line-height 20px
        background #FFF
        border 1px solid #d1dbe5
        box-shadow 0 2px 4px 0 rgba(0,0,0,.12), 0 0 6px 0 rgba(0,0,0,.04)
        z-index 10
        font-size 12px
        border-radius 5px
        font-weight normal
        .arrow
            position absolute
            left 50%
            width 0
            height 0
            bottom -7px
            border-color transparent
            border-style solid
            border-width 6px
            border-top-color #d1dbe5
            border-bottom-width 0
            margin-right 3px
        .arrow2
            border-top-color #FFF
            bottom -5px
    .common-loading
        background rbga(255,255,255,.5)